extends layout

block content
  script(type='text/javascript', src='/javascripts/xcity.js')
  body
    .x-nav
      span.layui-breadcrumb
        a(href='') 首页
        a(href='') 演示
        a
          cite 导航元素
      a.layui-btn.layui-btn-small(style='line-height:1.6em;margin-top:3px;float:right', onclick='location.reload()', title='刷新')
        i.layui-icon.layui-icon-refresh(style='line-height:30px')
    .layui-fluid
      .layui-row.layui-col-space15
        .layui-col-md12
          .layui-card
            .layui-card-body
              form.layui-form.layui-col-md12.layui-form-pane
                #start.layui-form-item.x-city
                  label.layui-form-label 城市联动
                  .layui-input-inline
                    select(name='province', lay-filter='province')
                      option(value='') 请选择省
                  .layui-input-inline
                    select(name='city', lay-filter='city')
                      option(value='') 请选择市
                  .layui-input-inline
                    select(name='area', lay-filter='area')
                      option(value='') 请选择县/区
                #end.layui-form-item.x-city
                  label.layui-form-label 城市联动
                  .layui-input-inline
                    select(name='province', lay-filter='province')
                      option(value='') 请选择省
                  .layui-input-inline
                    select(name='city', lay-filter='city')
                      option(value='') 请选择市
                  .layui-input-inline
                    select(name='area', lay-filter='area')
                      option(value='') 请选择县/区
            hr
            .layui-card-body
              pre.layui-code(lay-title='JavaScript', lay-skin='notepad').
                \n    //xcity城市插件 基于于jquery与layui form 模块，使用之前先确认这两者是否引入 
                  //插件文件为 xcity.js,引入
                  id所有标签需要有class x-city  id没有根据自己需要定义
                  select lay-filter 属性值 为必须 "province/city/area"
                  //初始化
                  $('#x-city').xcity();
                  //传默认值 
                  $('#x-city').xcity('广东','广州市','东山区');
    script(type='text/javascript', src='./javascripts/xcity.js')
    script.
      layui.use(['form','code'], function(){
      form = layui.form;
      layui.code();
      $('#start').xcity();
      $('#end').xcity('广东','广州市','东山区');
      });
