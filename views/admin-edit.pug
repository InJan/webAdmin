            label.layui-form-label(for='L_pass')
              span.x-red *
              | 密码
            .layui-input-inline
              input#L_pass.layui-input(type='password', name='pass', required='', lay-verify='pass', autocomplete='off')
            .layui-form-mid.layui-word-aux
              | 6到16个字符
          .layui-form-item
            label.layui-form-label(for='L_repass')
              span.x-red *
              | 确认密码
            .layui-input-inline
              input#L_repass.layui-input(type='password', name='repass', required='', lay-verify='repass', autocomplete='off')
          .layui-form-item
            label.layui-form-label(for='L_repass')
            button.layui-btn(lay-filter='add', lay-submit='')
              | 增加
    script.
      layui.use(['form', 'layer'],
      function() {
      $ = layui.jquery;
      var form = layui.form,
      layer = layui.layer;
      //自定义验证规则
      form.verify({
      nikename: function(value) {
      if (value.length < 5) {
      return '昵称至少得5个字符啊';
      }
      },
      pass: [/(.+){6,12}$/, '密码必须6到12位'],
      repass: function(value) {
      if ($('#L_pass').val() != $('#L_repass').val()) {
      return '两次密码不一致';
      }
      }
      });
      //监听提交
      form.on('submit(add)',
      function(data) {
      console.log(data);
      //发异步，把数据提交给php
      layer.alert("增加成功", {
      icon: 6
      },
      function() {
      //关闭当前frame
      xadmin.close();
      // 可以对父窗口进行刷新
      xadmin.father_reload();
      });
      return false;
      });
      });
