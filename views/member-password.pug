extends layout

block content
  body
    .layui-fluid
      .layui-row
        form.layui-form
          .layui-form-item
            label.layui-form-label(for='L_username') 昵称
            .layui-input-inline
              input#L_username.layui-input(type='text', name='username', disabled='', value='小明')
          .layui-form-item
            label.layui-form-label(for='L_repass')
              span.x-red *
              | 旧密码
            .layui-input-inline
              input#L_repass.layui-input(type='password', name='oldpass', required='', lay-verify='required', autocomplete='off')
          .layui-form-item
            label.layui-form-label(for='L_pass')
              span.x-red *
              | 新密码
            .layui-input-inline
              input#L_pass.layui-input(type='password', name='newpass', required='', lay-verify='required', autocomplete='off')
            .layui-form-mid.layui-word-aux 6到16个字符
          .layui-form-item
            label.layui-form-label(for='L_repass')
              span.x-red *
              | 确认密码
            .layui-input-inline
              input#L_repass.layui-input(type='password', name='repass', required='', lay-verify='required', autocomplete='off')
          .layui-form-item
            label.layui-form-label(for='L_repass')
            button.layui-btn(lay-filter='save', lay-submit='') 增加
    script.
      layui.use(['form', 'layer'],
      function() {
      $ = layui.jquery;
      var form = layui.form,
      layer = layui.layer;
      //监听提交
      form.on('submit(save)',
      function(data) {
      console.log(data);
      //发异步，把数据提交给php
      layer.alert("修改成功", {
      icon: 6
      },
      function() {
      // 获得frame索引
      var index = parent.layer.getFrameIndex(window.name);
      //关闭当前frame
      parent.layer.close(index);
      });
      return false;
      });
      });
